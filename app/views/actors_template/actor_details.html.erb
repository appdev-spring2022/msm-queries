<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=@the_actor.image%>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<h2>Filmography</h2>

<table border="1">
  <% @the_character_list.each do |character| %>
  <% this_movie = Movie.where(:id => character.movie_id).at(0) %>
    <tr>
      <td>
        <%= this_movie.title %>
      </td>

      <td>
        <%= this_movie.year %>
      </td>

      <td>
        <%= Director.where({:id => this_movie.director_id}).at(0).name %>
      </td>

      <td>
        <%= character.name %>
      </td>

      <td>
        <a href="/movies/<%= this_movie.id %>">
          Show details
        </a>
      </td>
    </tr>
  <%end%>
</table>

  </body>
</html>
